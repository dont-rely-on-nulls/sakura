{erl_opts, [debug_info]}.
{deps, [{merklet, "2.0.0"}]}.

{shell, [
    {apps, [main]}
]}.

{dialyzer, [
    {plt_extra_apps, [merklet]},
    {warnings, [unknown]},
    {exclude_mods, [
        query_planner_test,
        repl_comprehensive_test,
        function_relations_test,
        infinite_relations_test,
        join_test,
        operations_test,
        provenance_test,
        query_pipeline_test
    ]}
]}.

{edoc_opts, [
    {doclet, edoc_doclet},
    {source_path, ["src"]},
    {app_default, "https://www.erlang.org/doc/man"},
    {preprocess, true},
    {includes, ["include"]},
    {dir, "doc"},
    {overview, "doc/overview.edoc"},
    {title, "Domino - Extended Relational Database Engine"},
    {pretty_printer, erl_pp}
]}.